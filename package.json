{
  "name": "@dexie-kit/migrate",
  "version": "0.1.0",
  "description": "SQL-style migrations for Dexie: numbered files, snapshot, squashing, resumable upgrades, multi-tab safe",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "bin": {
    "dexie-migrate": "dist/cli.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./vite-plugin": {
      "import": "./dist/vite-plugin.mjs",
      "require": "./dist/vite-plugin.js",
      "types": "./dist/vite-plugin.d.ts"
    },
    "./webpack-plugin": {
      "import": "./dist/webpack-plugin.mjs",
      "require": "./dist/webpack-plugin.js",
      "types": "./dist/webpack-plugin.d.ts"
    },
    "./progress-ui": {
      "import": "./dist/progress-ui.mjs",
      "require": "./dist/progress-ui.js",
      "types": "./dist/progress-ui.d.ts"
    },
    "./react": {
      "import": "./dist/react.mjs",
      "require": "./dist/react.js",
      "types": "./dist/react.d.ts"
    },
    "./vue": {
      "import": "./dist/vue.mjs",
      "require": "./dist/vue.js",
      "types": "./dist/vue.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts src/cli.ts src/vite-plugin.ts src/webpack-plugin.ts src/progress-ui.ts src/react.tsx src/vue.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts src/cli.ts src/vite-plugin.ts src/webpack-plugin.ts src/progress-ui.ts src/react.tsx src/vue.ts --format cjs,esm --dts --watch",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint src --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "npm run build && changeset publish"
  },
  "keywords": [
    "dexie",
    "indexeddb",
    "migrations",
    "database",
    "offline-first",
    "pwa",
    "vite-plugin",
    "webpack-plugin"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/abdussamadbello/dexie-kit-migrate.git"
  },
  "bugs": {
    "url": "https://github.com/abdussamadbello/dexie-kit-migrate/issues"
  },
  "homepage": "https://github.com/abdussamadbello/dexie-kit-migrate#readme",
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "dexie": "^3.0.0 || ^4.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "vue": {
      "optional": true
    },
    "vite": {
      "optional": true
    },
    "webpack": {
      "optional": true
    }
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@types/node": "^20.10.0",
    "@types/react": "^18.3.26",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "dexie": "^4.0.0",
    "eslint": "^8.54.0",
    "fake-indexeddb": "^5.0.0",
    "jsdom": "^27.0.1",
    "react": "^18.3.1",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vite": "^5.4.21",
    "vitest": "^1.0.0",
    "vue": "^3.5.22",
    "webpack": "^5.102.1"
  },
  "dependencies": {
    "commander": "^11.1.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ]
}
