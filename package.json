{
  "name": "dexie-migrate",
  "version": "0.1.0",
  "description": "SQL-style migrations for Dexie: numbered files, snapshot, squashing, resumable upgrades, multi-tab safe",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "bin": {
    "dexie-migrate": "dist/cli.js"
  },
  "scripts": {
    "build": "tsup src/index.ts src/cli.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts src/cli.ts --format cjs,esm --dts --watch",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "dexie",
    "indexeddb",
    "migrations",
    "database",
    "offline-first",
    "pwa"
  ],
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "dexie": "^3.0.0 || ^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "dexie": "^4.0.0",
    "eslint": "^8.54.0",
    "fake-indexeddb": "^5.0.0",
    "jsdom": "^27.0.1",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "commander": "^11.1.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ]
}
